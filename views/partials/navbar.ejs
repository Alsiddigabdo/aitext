                    <% } else { %>
                        <a href="/auth/login" class="px-4 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-dark-700 transition">تسجيل الدخول</a>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <!-- رسائل التنبيه المحدثة -->
