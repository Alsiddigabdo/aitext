                <a href="/" class="flex items-center space-x-2 space-x-reverse">
                    <div class="p-2 rounded-lg bg-primary/10 transition">
                        <i class="ri-ai-generate text-2xl text-primary"></i>
                    </div>
                    <span class="text-2xl font-bold gradient-text">SmartTextAI</span>
                </a>
                
                <!-- Navigation -->
                <div class="hidden md:flex items-center space-x-1 space-x-reverse">
                    <a href="/" class="px-4 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-dark-700 transition">الرئيسية</a>
                    <a href="/personality-analysis" class="px-4 py-2 rounded-lg text-white bg-primary/20">تحليل الشخصية</a>
