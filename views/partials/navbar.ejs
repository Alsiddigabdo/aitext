    <!-- Main Content -->
    <main class="mt-20 flex-grow">
        <section class="py-12 md:py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <!-- Hero Section -->
                <div class="text-center mb-12 animate__animated animate__fadeIn">
                    <h1 class="text-4xl md:text-5xl font-bold mb-4 gradient-text">تحليل الشخصية المتكامل</h1>
                    <p class="text-lg text-gray-300 max-w-2xl mx-auto">اكتشف أسرار شخصيتك، أنماط تفكيرك، وأسلوبك في اتخاذ القرارات باستخدام الذكاء الاصطناعي</p>
                    <div class="mt-6 flex justify-center space-x-4 space-x-reverse">
                        <a href="#personality-test" class="px-6 py-2 rounded-full bg-primary text-white hover:bg-primary/90 transition">ابدأ الآن</a>
                        <a href="#how-it-works" class="px-6 py-2 rounded-full border border-primary text-primary hover:bg-primary/10 transition">كيف يعمل؟</a>
                    </div>
                </div>

                <!-- باقي محتوى الصفحة الأصلي ... -->

