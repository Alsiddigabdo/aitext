<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Text Analyzer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #7C3AED;
            --secondary: #8B5CF6;
            --accent: #F59E0B;
            --dark: #1E293B;
            --darker: #0F172A;
        }
        
        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, var(--darker), var(--dark));
            color: #E2E8F0;
            padding-top: 76px; /* لحساب ارتفاع القائمة الثابتة */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        /* تصميم القائمة */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 50;
            padding: 0.75rem 0;
            background: rgba(15, 23, 42, 0.8);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
            transition: all 0.5s ease;
        }
        
        .navbar-scrolled {
            background: rgba(15, 23, 42, 0.95);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }
        
        .logo-text {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
        
        .nav-link {
            position: relative;
            padding: 0.25rem 0.5rem;
            color: #E2E8F0;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        
        .nav-link:hover {
            color: white;
        }
        
        .nav-link-underline {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 0;
            height: 2px;
            background: var(--primary);
            transition: width 0.3s ease;
        }
        
        .nav-link:hover .nav-link-underline {
            width: 100%;
            left: 0;
            right: auto;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(123, 92, 237, 0.4);
        }
        
        .mobile-nav-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #E2E8F0;
            transition: all 0.3s ease;
        }
        
        .mobile-nav-link:hover {
            background: rgba(255, 255, 255, 0.05);
            color: white;
        }
        
        .mobile-nav-link i {
            margin-left: 0.75rem;
        }
        
        /* تأثيرات القائمة المنسدلة للجوال */
        .mobile-menu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease, opacity 0.3s ease;
            opacity: 0;
            background: rgba(30, 41, 59, 0.95);
            backdrop-filter: blur(12px);
            border-radius: 0.75rem;
            margin: 0.5rem;
        }
        
        .mobile-menu.open {
            max-height: 500px;
            opacity: 1;
        }
        
        /* تأثيرات التبديل بين الأيقونات */
        .icon-toggle {
            transition: transform 0.3s ease;
        }
        
        .icon-toggle.active {
            transform: rotate(180deg);
        }
        
        /* المحتوى الرئيسي */
        .main-content {
            flex: 1;
            width: 100%;
        }
        
        /* تصميم متجاوب */
        @media (max-width: 767px) {
            .desktop-nav {
                display: none;
            }
            
            .mobile-nav {
                display: flex;
            }
        }
        
        @media (min-width: 768px) {
            .desktop-nav {
                display: flex;
            }
            
            .mobile-nav {
                display: none;
            }
        }
    </style>
</head>
<body>
    <!-- القائمة الرئيسية -->
    <nav class="navbar" id="navbar">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- الشعار -->
                <a href="/" class="flex items-center space-x-2 space-x-reverse">
                    <div class="p-2 rounded-lg bg-primary/10 transition">
                        <i class="ri-ai-generate text-2xl text-primary"></i>
                    </div>
                    <span class="text-2xl font-bold logo-text">SmartTextAI</span>
                </a>

                <!-- القائمة الرئيسية - سطح المكتب -->
                <div class="desktop-nav items-center space-x-8 space-x-reverse">
                    <div class="flex items-center space-x-6 space-x-reverse">
                      
                        <a href="#contact" class="nav-link group">
                            تواصل معنا
                            <span class="nav-link-underline"></span>
                        </a>
                    </div>

                    <!-- أزرار تسجيل الدخول والتجربة -->
                    <div class="flex items-center space-x-4 space-x-reverse ml-6">
                        <a href="/auth/login" class="px-4 py-2 text-sm rounded-lg bg-gray-800 text-gray-300 hover:bg-gray-700 transition flex items-center">
                            <i class="ri-login-circle-line ml-2"></i> تسجيل الدخول
                        </a>
                        <a href="/auth/register" class="px-4 py-2 text-sm rounded-lg btn-primary hover:shadow-lg transition flex items-center">
                            <i class="ri-rocket-line ml-2"></i> تجربة مجانية
                        </a>
                    </div>
                </div>

                <!-- قائمة الجوال -->
                <div class="mobile-nav items-center space-x-4">
                    <button id="mobile-menu-toggle" class="p-2 rounded-lg hover:bg-gray-800 transition relative">
                        <i class="ri-menu-line text-2xl text-gray-300 icon-toggle"></i>
                        <span class="absolute -top-1 -right-1 bg-accent text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">8</span>
                    </button>
                </div>
            </div>

            <!-- القائمة المنسدلة للجوال -->
            <div class="mobile-menu" id="mobile-menu">
                <div class="flex flex-col py-2 space-y-1">
                    <a href="/" class="mobile-nav-link">
                        <i class="ri-home-4-line"></i> الرئيسية
                    </a>
                    <a href="#features" class="mobile-nav-link">
                        <i class="ri-star-line"></i> المميزات
                    </a>
                    <a href="#tools" class="mobile-nav-link">
                        <i class="ri-tools-line"></i> الأدوات
                    </a>
                    <a href="#openai-key" class="mobile-nav-link">
                        <i class="ri-key-2-line"></i> تفعيل OpenAI
                    </a>
                    <a href="#contact" class="mobile-nav-link">
                        <i class="ri-contacts-line"></i> تواصل معنا
                    </a>
                    
                    <div class="pt-2 mt-2 border-t border-gray-800 px-4 py-3 space-y-3">
                        <a href="/auth/login" class="block w-full px-4 py-2 text-center rounded-lg bg-gray-800 text-gray-300 hover:bg-gray-700 transition flex items-center justify-center">
                            <i class="ri-login-circle-line ml-2"></i> تسجيل الدخول
                        </a>
                        <a href="/auth/register" class="block w-full px-4 py-2 text-center rounded-lg btn-primary hover:shadow-lg transition flex items-center justify-center">
                            <i class="ri-rocket-line ml-2"></i> تجربة مجانية
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    <script>
        // تفعيل القائمة المنسدلة للجوال
        const menuToggle = document.getElementById('mobile-menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const iconToggle = menuToggle.querySelector('.icon-toggle');
        
        menuToggle.addEventListener('click', function() {
            mobileMenu.classList.toggle('open');
            iconToggle.classList.toggle('active');
            
            // تغيير الأيقونة
            if (mobileMenu.classList.contains('open')) {
                iconToggle.classList.remove('ri-menu-line');
                iconToggle.classList.add('ri-close-line');
            } else {
                iconToggle.classList.remove('ri-close-line');
                iconToggle.classList.add('ri-menu-line');
            }
        });
        
        // إغلاق القائمة عند النقر على رابط
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.remove('open');
                iconToggle.classList.remove('ri-close-line');
                iconToggle.classList.add('ri-menu-line');
                iconToggle.classList.remove('active');
            });
        });
        
        // تأثير التمرير على القائمة
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', function() {
            if (window.scrollY > 50) {
                navbar.classList.add('navbar-scrolled');
            } else {
                navbar.classList.remove('navbar-scrolled');
            }
        });

        // ضبط ارتفاع المحتوى الرئيسي ديناميكيًا
        function adjustMainContentHeight() {
            const navbarHeight = document.getElementById('navbar').offsetHeight;
            const footerHeight = document.querySelector('footer').offsetHeight;
            const mainContent = document.querySelector('.main-content');
            
            mainContent.style.minHeight = `calc(100vh - ${navbarHeight + footerHeight}px)`;
        }

        // تنفيذ الدالة عند التحميل وعند تغيير حجم النافذة
        window.addEventListener('load', adjustMainContentHeight);
        window.addEventListener('resize', adjustMainContentHeight);
    </script>
