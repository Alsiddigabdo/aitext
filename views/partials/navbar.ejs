            transform: scale(1.1);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
        }
        
        /* تأثيرات دخول الصفحة */
        [data-aos="custom-fade"] {
            opacity: 0;
            transition-property: opacity, transform;
        }
        
