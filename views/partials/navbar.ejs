        /* تأثيرات الظل للقائمة المتنقلة */
        .mobile-menu-shadow {
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.4);
        }

        /* تأثيرات الاهتزاز عند النقر */
